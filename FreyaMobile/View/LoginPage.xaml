<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreyaMobile.View.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label Text="Felhasználónév: "></Label>
        <Entry x:Name="txtUserName"></Entry>

        <Label Text="Jelszó:"></Label>
        <Entry x:Name="txtPassword"></Entry>

        <Button x:Name="btnLogin" Text="Bejelentkezés" Clicked="Login_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>